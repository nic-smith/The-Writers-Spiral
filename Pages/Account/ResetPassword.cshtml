@page
@model The_Writers_Spiral.Pages.Account.ResetPasswordModel

<form method="post">
    <input asp-for="Input.Email" type="hidden" />
    <input asp-for="Input.Token" type="hidden" />

    <label asp-for="Input.NewPassword">New Password:</label>
    <input asp-for="Input.NewPassword" type="password" required />
    <span asp-validation-for="Input.NewPassword"></span>

    <label asp-for="Input.ConfirmPassword">Confirm New Password:</label>
    <input asp-for="Input.ConfirmPassword" type="password" required />
    <span asp-validation-for="Input.ConfirmPassword"></span>

    <button type="submit">Reset Password</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
